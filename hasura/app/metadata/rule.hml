    collection: Rule
  filterExpressionType: rule_bool_exp
  aggregateExpression: rule_agg_exp
  orderByExpression: rule_order_by_exp
  graphql:
    selectMany:
      queryRootField: rule
      subscription:
        rootField: rule
    selectUniques:
