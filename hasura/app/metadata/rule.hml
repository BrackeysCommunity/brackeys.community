  graphql:
    typeName: rule_bool_exp

---
kind: AggregateExpression
version: v1
definition:
  name: rule_agg_exp
  operand:
    object:
      aggregatedType: rule
      aggregatableFields:
        - fieldName: brief
          aggregateExpression: string_agg_exp
        - fieldName: description
          aggregateExpression: string_agg_exp
        - fieldName: guild_id
          aggregateExpression: int64_agg_exp
        - fieldName: id
