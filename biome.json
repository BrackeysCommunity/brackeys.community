{
  "$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "**/src/**/*",
      "**/*.ts",
      "**/*.tsx",
      "**/*.js",
      "**/*.jsx",
      "**/*.json",
      "**/*.md",
      "**/*.yml",
      "**/*.yaml",
      "**/*.css",
      "**/*.scss",
      "!**/src/routeTree.gen.ts",
      "!**/src/api/spacetime-db",
      "!**/src/spacetime-bindings",
      "!**/spacetime-db",
      "!**/sandbox",
      "!**/child",
      "!**/.nitro",
      "!**/.output",
      "!**/.vercel",
      "!**/.vscode",
      "!**/node_modules",
      "!**/dist",
      "!**/build",
      "!**/storybook-static",
      "!**/src/lib/gql",
      "!**/hasura-ddn/engine/build"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noUnknownAtRules": "off"
      },
      "complexity": {
        "noImportantStyles": "warn"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "jsxQuoteStyle": "double",
      "semicolons": "always"
    }
  }
}
