  description: container for multipart object metadata.
  fields:
    - name: initiated
      type: Timestamptz
    - name: name
      type: String
    - name: size
      type: Int64
    - name: storageClass
      type: String
    - name: uploadId
      type: String
  graphql:
    typeName: StorageObjectMultipartInfo
    inputTypeName: StorageObjectMultipartInfoInput
  dataConnectorTypeMapping:
    - dataConnectorName: storage
      dataConnectorObjectType: StorageObjectMultipartInfo
      fieldMapping:
        initiated:
          column:
            name: initiated
        name:
          column:
            name: name
        size:
          column:
            name: size
        storageClass:
          column:
            name: storage_class
        uploadId:
          column:
            name: upload_id

---
kind: TypePermissions
version: v1
