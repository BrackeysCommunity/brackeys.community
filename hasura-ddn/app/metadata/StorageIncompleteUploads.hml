          - initiated
          - name
          - size
          - storageClass
          - uploadId

---
kind: Command
version: v1
definition:
  name: StorageIncompleteUploads
  outputType: "[StorageObjectMultipartInfo!]!"
  arguments:
    - name: bucket
      type: String
    - name: clientId
      type: Enum
    - name: prefix
      type: String
  source:
    dataConnectorName: storage
    dataConnectorCommand:
      function: storage_incomplete_uploads
    argumentMapping:
      bucket: bucket
      clientId: client_id
      prefix: prefix
  graphql:
    rootFieldName: storageIncompleteUploads
    rootFieldKind: Query
  description: list partially uploaded objects in a bucket.

---
kind: CommandPermissions
version: v1
definition:
  commandName: StorageIncompleteUploads
  permissions:
